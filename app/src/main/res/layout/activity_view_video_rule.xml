<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:paddingBottom="@dimen/activity_vertical_margin"
              android:paddingLeft="@dimen/activity_horizontal_margin"
              android:paddingRight="@dimen/activity_horizontal_margin"
              android:paddingTop="@dimen/activity_vertical_margin"
              android:orientation="vertical"
              tools:context=".activity.ViewAudioRuleActivity" >

    <TextView
        android:id="@+id/view_rule_rule_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rule name:" />

    <TextView
        android:id="@+id/view_rule_last_recording_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/view_rule_rule_name"
        android:layout_below="@+id/view_rule_rule_name"
        android:layout_marginTop="10dp"
        android:text="Last resording time:" />

    <TextView
        android:id="@+id/view_rule_recording_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/view_rule_last_recording_time"
        android:layout_below="@+id/view_rule_last_recording_time"
        android:layout_marginTop="10dp"
        android:text="Rule recording time: " />

    <TextView
        android:id="@+id/view_rule_recording_length"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/view_rule_recording_time"
        android:layout_below="@+id/view_rule_recording_time"
        android:layout_marginTop="10dp"
        android:text="Recording duration: " />

    <ListView
        android:id="@+id/view_rule_recording_list"
        android:layout_weight="30"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/view_rule_recording_length" >

    </ListView>

    <Button
        android:id="@+id/button1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/view_rule_recording_list"
        android:layout_below="@+id/view_rule_recording_list"
        android:onClick="delete"
        android:text="Delete Rule" />

</LinearLayout>